@model IEnumerable<Finance101.Models.PersonalAccount>

@{
    ViewBag.Title = "Index";
}
@if (Model != null)
{
    <h2>
        @Model.FirstOrDefault().Household.Name
    </h2>
}

<table class="table">
    <tr>
        <th>
            Account Name
        </th>
        <th>
            Balance
        </th>
        <th>
            Reconciled Balance
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @item.Balance.ToString("C2")
            </td>
            <td>
                @item.ReconciledBalance.ToString("C2")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
